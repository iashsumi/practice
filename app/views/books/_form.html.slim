-unless @book.new_record? 
  =f.label :id
  =f.hidden_field :id, :value => @book.id
  p =@book.id
.title
  =f.label :title
  =f.text_field :title
.publisher
  =f.label :publisher_id
  =f.select :publisher_id, @publishers, include_blank: true
.author
  =f.label :author_id
  =f.select :author_id, @authors, include_blank: true
.release_date
  =f.label :release_date
  =f.text_field :release_date, { class: 'datepicker' }